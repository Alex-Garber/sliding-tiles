<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/layout_margin">

  <GridView
    android:id="@+id/tile_grid"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/layout_margin"
    android:numColumns="3"
    android:background="@color/puzzleBackground"
    android:padding="@dimen/grid_padding"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <TextView
    android:id="@+id/move_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    style="@style/ScreenText"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/tile_grid"/>

  <TextView
    android:id="@+id/puzzle_timer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="textEnd"
    android:layout_margin="@dimen/layout_margin"
    style="@style/ScreenText"
    app:layout_constraintBaseline_toBaselineOf="@id/move_counter"
    app:layout_constraintEnd_toEndOf="parent"/>

  <ProgressBar
    android:id="@+id/progress_display"
    style="@android:style/Widget.ProgressBar.Horizontal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:progressDrawable="@drawable/progress_gradient"
    app:layout_constraintTop_toBottomOf="@id/move_counter"
    app:layout_constraintStart_toEndOf="@id/tile_grid"
    app:layout_constraintEnd_toEndOf="parent"/>

  <CheckBox
    android:id="@+id/show_overlay"
    android:text="@string/show_overlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    style="@style/ScreenText"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/tile_grid"/>

  <Button
    android:id="@+id/reset_puzzle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:text="@string/reset_puzzle"
    app:layout_constraintTop_toTopOf="@id/progress_display"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/new_puzzle"/>

  <Button
    android:id="@+id/new_puzzle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:text="@string/new_puzzle"
    app:layout_constraintTop_toTopOf="@id/reset_puzzle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <ProgressBar
    android:id="@+id/loading_indicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>